# Replace C-b with C-a
unbind C-b
set -g prefix C-a
bind C-a send-prefix

set -g default-terminal "xterm-256color"
set-option -ga terminal-overrides ",xterm-256color:Tc"

# set scrollback history to 10000 (10k)
set -g history-limit 10000

# ----------------------
# set some pretty colors
# ----------------------
# set pane colors - hilight the active pane
# set-option -g pane-border-style fg=colour59
# set-option -g pane-active-border-style fg=colour59

# colorize messages in the command line
# set-option -g message-style fg=brightred,bg=black

# ----------------------
# Status Bar
# -----------------------
set-option -g status on # turn the status bar on
set -g status-interval 5 # set update frequencey (default 15 seconds)
# set -g status-justify centre # center window list for clarity

# visual notification of activity in other windows
setw -g monitor-activity on
set -g visual-activity on

# set color for status bar
# set-option -g status-style fg=colour255,bg=colour236,dim

# set window list colors
# set-window-option -g window-status-style fg=colour255,bg=colour236,dim

# set-window-option -g window-status-current-style fg=colour82,bg=colour236,bright

# show currently active task from taskwarrior
# set -g status-left-length 200
# set -g status-left "#[fg=yellow,bold] [ #(cd #{pane_current_path}; git rev-parse --abbrev-ref HEAD) ]"

# vim navigation between splits
set -g mode-keys vi
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# resize with <C-b> Shift+[hjkl]
bind -r H resize-pane -L 4
bind -r J resize-pane -D 2
bind -r K resize-pane -U 2
bind -r L resize-pane -R 4

set -g @plugin "arcticicestudio/nord-tmux"

run -b "~/.tmux/plugins/tpm/tpm"
